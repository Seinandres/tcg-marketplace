// generator y datasource iniciales
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================
// üîê MODELOS DE SEGURIDAD (NEXTAUTH) - INTACTOS
// =========================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =========================================================
// üë§ USUARIO (SISTEMA RPG NIVEL DIOS)
// =========================================================

model User {
  id             String    @id @default(cuid())
  name           String?
  username       String?   @unique
  email          String?   @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  
  // Datos Personales
  rut            String?
  walletAddress  String?
  
  // --- SISTEMA RPG & PROGRESO ---
  reputation     Int       @default(100) // % de fiabilidad
  heroClass      String    @default("Novato") // T√≠tulo visible
  heroColor      String    @default("#3b82f6") // Color del perfil
  heroLevel      Int       @default(1)
  heroTitle      String?   @default("Recluta")
  heroXP         Int       @default(0)
  
  // Econom√≠a
  coins          Int       @default(100) // Moneda para comprar mejoras/skins

  // Inventario de Items RPG
  rpgItems       UserItem[]
  
  // Rol (Permisos)
  role           String    @default("USER") 

  // Relaciones Auth
  accounts       Account[]
  sessions       Session[]
  
  // Relaciones App
  bids           Bid[]
  listings       Listing[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// =========================================================
// ‚öîÔ∏è SISTEMA DE ITEMS & BUFFS (CON LORE Y BENEFICIOS)
// =========================================================

model RpgItem {
  id            String   @id @default(cuid())
  name          String   // Ej: "Espada del Trader"
  description   String   // Ej: "Destaca tus ventas por 24h"
  lore          String?  @db.Text // Historia √©pica e inmersiva
  benefits      String?  @db.Text // Beneficios reales (ej: "-5% Fees")
  type          String   // WEAPON, SHIELD, BUFF, SKIN
  rarity        String   // COMMON, RARE, EPIC, LEGENDARY
  image         String   // Icono/Imagen del item
  price         Int      @default(0) // Costo en monedas del juego
  requiredLevel Int      @default(1) // Nivel requerido para equipar
  
  // Efectos T√©cnicos (JSON para flexibilidad total)
  effects       String?  
  
  users         UserItem[]
}

// Inventario: Qu√© usuario tiene qu√© item
model UserItem {
  id         String   @id @default(cuid()) // <-- CORREGIDO: @id definido solo una vez
  userId     String
  itemId     String
  isEquipped Boolean  @default(false) 
  obtainedAt DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  item       RpgItem  @relation(fields: [itemId], references: [id])
}

// =========================================================
// üì¶ MARKETPLACE & CARTAS (MERCADO)
// =========================================================

model Listing {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  price     Int
  condition String
  quantity  Int      @default(1)
  status    String   @default("ACTIVE") // ACTIVE, SOLD, CANCELLED
  isNft     Boolean  @default(false)
  type      String   @default("SALE") // SALE, AUCTION
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  bids      Bid[]
  card      Card     @relation(fields: [cardId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Int
  createdAt DateTime @default(now())
  
  userId    String
  listingId String
  
  listing   Listing  @relation(fields: [listingId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Card {
  id            String    @id @default(cuid())
  name          String
  image         String?   
  imageUrlSmall String?   
  imageUrlHiRes String?
  
  setId         String?   
  set           String?   
  number        String?
  rarity        String?
  game          String    @default("Pokemon")
  
  marketPrice   Float?
  artist        String?
  hp            String?
  subtypes      String[]
  supertype     String?
  types         String[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  
  cardSetRel    CardSet?  @relation(fields: [setId], references: [id])
  listings      Listing[]
}

model CardSet {
  id           String   @id @default(cuid())
  name         String
  code         String?
  releaseDate  String?
  totalCards   Int?
  images       Json?
  printedTotal Int?
  series       String?
  
  updatedAt    DateTime @default(now()) @updatedAt
  cards        Card[]
}

// =========================================================
// üõí E-COMMERCE & HISTORIAL
// =========================================================

model CartItem {
  id        String @id @default(cuid())
  userId    String
  listingId String
  quantity  Int    @default(1)
}

model Order {
  id        String   @id @default(cuid())
  buyerId   String
  sellerId  String
  listingId String
  price     Int
  status    String   @default("COMPLETED")
  createdAt DateTime @default(now())
}

model PriceHistory {
  id     String   @id @default(cuid())
  cardId String
  date   DateTime @default(now())
  price  Int
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  stripePriceId    String
  status           String
  currentPeriodEnd DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}