// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================================================
// üîê MODELOS DE SEGURIDAD (NEXTAUTH) - AGREGADOS
// =========================================================

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =========================================================
// üë§ USUARIO (FUSIONADO: AUTH + RPG)
// =========================================================

model User {
  id             String    @id @default(cuid())
  name           String?   // Necesario para NextAuth
  username       String?   @unique
  email          String?   @unique
  emailVerified  DateTime? // Necesario para NextAuth
  hashedPassword String?   // Necesario para Login con contrase√±a
  image          String?
  
  // Datos Personales
  rut            String?
  walletAddress  String?
  
  // Sistema RPG & Reputaci√≥n
  reputation     Int       @default(0)
  heroClass      String    @default("warrior")
  heroColor      String    @default("#3b82f6")
  heroLevel      Int       @default(1)
  heroTitle      String?   @default("Iniciado")
  heroWeapon     String    @default("sword")
  heroXP         Int       @default(0)
  
  // Rol (para diferenciar vendedores)
  role           String    @default("USER") 

  // Relaciones Auth
  accounts       Account[]
  sessions       Session[]
  
  // Relaciones App
  bids           Bid[]
  listings       Listing[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// =========================================================
// üì¶ MARKETPLACE & CARTAS (INTACTO)
// =========================================================

model Listing {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  price     Int
  condition String
  quantity  Int      @default(1)
  status    String   @default("ACTIVE")
  isNft     Boolean  @default(false)
  type      String   @default("SALE") // AUCTION o SALE
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  bids      Bid[]
  card      Card     @relation(fields: [cardId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Bid {
  id        String   @id @default(cuid())
  amount    Int
  createdAt DateTime @default(now())
  
  userId    String
  listingId String
  
  listing   Listing  @relation(fields: [listingId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Card {
  id            String    @id @default(cuid())
  setId         String
  name          String
  number        String
  rarity        String?
  imageUrlSmall String
  imageUrlHiRes String?
  marketPrice   Float?
  artist        String?
  game          String    @default("Pokemon")
  hp            String?
  subtypes      String[]
  supertype     String?
  types         String[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  
  set           CardSet   @relation(fields: [setId], references: [id])
  listings      Listing[]
}

model CardSet {
  id           String   @id @default(cuid())
  name         String
  code         String?
  releaseDate  String?
  totalCards   Int?
  images       Json?
  printedTotal Int?
  series       String?
  
  updatedAt    DateTime @default(now()) @updatedAt
  cards        Card[]
}

model CartItem {
  id        String @id
  userId    String
  listingId String
  quantity  Int    @default(1)
}

model Order {
  id        String   @id
  buyerId   String
  sellerId  String
  listingId String
  price     Int
  status    String   @default("COMPLETED")
  createdAt DateTime @default(now())
}

model PriceHistory {
  id     String   @id
  cardId String
  date   DateTime @default(now())
  price  Int
}

model Subscription {
  id               String   @id
  userId           String   @unique
  stripeCustomerId String   @unique
  stripePriceId    String
  status           String
  currentPeriodEnd DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime
}